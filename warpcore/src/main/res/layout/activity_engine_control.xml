<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.warpcore.EngineControl">

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="437dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <com.warpcore.VerticalSeekBar
            android:id="@+id/seekBarWarp"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:max="8" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Pattern"
                android:onClick="onRadioButtonClicked"
                android:text="Standard"
                tools:text="Standard" />

            <RadioButton
                android:id="@+id/radioButtonBreach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Pattern"
                android:onClick="onRadioButtonClicked"
                android:text="Breach"
                tools:text="Breach" />

            <RadioButton
                android:id="@+id/radioButtonRainbow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Pattern"
                android:onClick="onRadioButtonClicked"
                android:text="Rainbow"
                tools:text="Rainbow" />

            <RadioButton
                android:id="@+id/radioButtonFade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Pattern"
                android:onClick="onRadioButtonClicked"
                android:text="Fade"
                tools:text="Fade" />

            <RadioButton
                android:id="@+id/radioButtonSlowFade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Pattern"
                android:onClick="onRadioButtonClicked"
                android:text="Slow Fade"
                tools:text="Slow Fade" />
        </RadioGroup>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
